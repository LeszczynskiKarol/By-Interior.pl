const categories = ['Wszystkie', 'Mieszkanie', 'Dom', 'Komercyjne'];
---

<BaseLayout {...seoData}>
  <!-- Hero Section -->
  <section class="relative py-24 bg-slate-950 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-950 to-teal-950"></div>
      <div class="absolute top-0 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-500/10 border border-teal-500/20 rounded-full text-teal-400 text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-teal-400 rounded-full animate-pulse"></span>
          Portfolio realizacji
        </div>
        <h1 class="font-display text-5xl lg:text-6xl font-bold text-white mb-6">
          Nasze <span class="text-teal-400">realizacje</span>
        </h1>
        <p class="text-xl text-slate-300 leading-relaxed">
          Przekonaj się, jak pomagamy naszym klientom tworzyć wyjątkowe przestrzenie. 
          Każdy projekt to unikalna historia i rozwiązania dopasowane do indywidualnych potrzeb.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b border-slate-100">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto text-center">
        <div>
          <div class="text-4xl font-bold text-teal-600">120+</div>
          <div class="text-slate-600 text-sm mt-1">Zrealizowanych projektów</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-teal-600">8</div>
          <div class="text-slate-600 text-sm mt-1">Lat doświadczenia</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-teal-600">100%</div>
          <div class="text-slate-600 text-sm mt-1">Zadowolonych klientów</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-teal-600">15k+</div>
          <div class="text-slate-600 text-sm mt-1">m² zaprojektowane</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section class="py-24 bg-slate-50">
    <div class="container mx-auto px-4 lg:px-8">
      <!-- Filters -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        {categories.map((category, index) => (
          <button 
            class={`filter-btn px-6 py-2.5 rounded-full font-medium transition-all ${index === 0 ? 'bg-teal-500 text-white' : 'bg-white text-slate-700 border border-slate-200 hover:border-teal-500 hover:text-teal-600'}`}
            data-filter={category === 'Wszystkie' ? 'all' : category}
          >
            {category}
          </button>
        ))}
      </div>

      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
        {projects.map((project, index) => (
          <article 
            class="portfolio-item group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all fade-in-observe"
            data-category={project.category}
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="relative h-64 overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="absolute bottom-4 left-4 right-4">
                  <span class="inline-block px-3 py-1 bg-teal-500 text-white text-xs rounded-full mb-2">
                    {project.style}
                  </span>
                </div>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-2 text-xs text-teal-600 font-medium mb-2">
                <span>{project.category}</span>
                <span class="w-1 h-1 bg-slate-300 rounded-full"></span>
                <span>{project.area}</span>
                <span class="w-1 h-1 bg-slate-300 rounded-full"></span>
                <span>{project.year}</span>
              </div>
              <h3 class="font-display text-xl font-bold text-slate-900 mb-2">{project.title}</h3>
              <p class="text-slate-600 text-sm mb-3 line-clamp-2">{project.description}</p>
              <div class="flex items-center text-xs text-slate-500">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
                {project.location}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Teaser -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          Chcesz zobaczyć swoją przestrzeń w naszym <span class="text-teal-600">portfolio</span>?
        </h2>
        <p class="text-lg text-slate-600 mb-10">
          Skontaktuj się z nami i opowiedz o swoim projekcie. Każde zlecenie traktujemy indywidualnie, 
          tworząc rozwiązania idealnie dopasowane do Twoich potrzeb i stylu życia.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#kontakt" class="bg-teal-500 text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-teal-600 transition-all hover:shadow-xl inline-block">
            Rozpocznij projekt
          </a>
          <a href="/studio-projektowania-wnetrz" class="border-2 border-slate-900 text-slate-900 px-8 py-4 rounded-full font-semibold text-lg hover:bg-slate-900 hover:text-white transition-all inline-block">
            Poznaj nas bliżej
          </a>
        </div>
      </div>
    </div>
  </section>

  <CTA />
  <Contact />
</BaseLayout>

<style>
  .filter-btn.active {
    @apply bg-teal-500 text-white border-teal-500;
  }

  .portfolio-item {
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .portfolio-item.hidden {
    display: none;
  }

  .portfolio-item.filtering {
    opacity: 0;
    transform: scale(0.95);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  const filterBtns = document.querySelectorAll<HTMLButtonElement>('.filter-btn');
  const portfolioItems = document.querySelectorAll<HTMLElement>('.portfolio-item');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update active button
      filterBtns.forEach(b => {
        b.classList.remove('active', 'bg-teal-500', 'text-white');
        b.classList.add('bg-white', 'text-slate-700');
      });
      btn.classList.add('active', 'bg-teal-500', 'text-white');
      btn.classList.remove('bg-white', 'text-slate-700');

      const filter = btn.dataset.filter;
      if (!filter) return;

      portfolioItems.forEach(item => {
        const itemCategory = item.dataset.category;
        if (filter === 'all' || itemCategory === filter) {
          item.classList.remove('hidden', 'filtering');
        } else {
          item.classList.add('filtering');
          setTimeout(() => {
            item.classList.add('hidden');
          }, 300);
        }
      });
    });
  });
</script>
