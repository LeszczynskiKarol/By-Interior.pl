// src/components/CTA.astro
---

<section class="py-24 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-teal-600 via-teal-500 to-teal-400"></div>
  
  <!-- Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23000000' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E&quot;);"></div>
  </div>

  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-display text-4xl lg:text-6xl font-bold text-white mb-6">
        Zrealizuj swoje marzenia<br/>o idealnym wnętrzu
      </h2>
      <p class="text-xl text-white/90 mb-10 leading-relaxed max-w-2xl mx-auto">
        Skorzystaj z bezpłatnej konsultacji. Porozmawiajmy o Twojej przestrzeni i stwórzmy coś wyjątkowego.
      </p>
      
      <!-- Features -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-5 border border-white/20">
          <svg class="w-8 h-8 text-white mb-3 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div class="text-white font-semibold">Bezpłatna wycena</div>
          <div class="text-white/70 text-sm mt-1">Bez żadnych zobowiązań</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-5 border border-white/20">
          <svg class="w-8 h-8 text-white mb-3 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <div class="text-white font-semibold">Szybki kontakt</div>
          <div class="text-white/70 text-sm mt-1">Odpowiedź w 24-48 godz.</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-5 border border-white/20">
          <svg class="w-8 h-8 text-white mb-3 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <div class="text-white font-semibold">Gwarancja jakości</div>
          <div class="text-white/70 text-sm mt-1">Pełna satysfakcja</div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="#kontakt"
          class="bg-white text-teal-600 px-10 py-4 rounded-full font-bold text-lg hover:bg-slate-100 transition-all hover:shadow-xl flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Napisz do nas
        </a>
        <a 
          href="tel:+48576060832"
          class="border-2 border-white text-white px-10 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-teal-600 transition-all flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          +48 576 060 832
        </a>
      </div>
    </div>
  </div>
</section>
