---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/aranzacje-wnetrz', label: 'Aranżacje wnętrz' },
  { href: '/studio-projektowania-wnetrz', label: 'Studio' },
  { href: '/projektowanie-mebli', label: 'Meble na wymiar' },
  { href: '/architekci-wnetrz', label: 'Architekci' },
];
---

<header class="fixed top-0 w-full bg-white/98 backdrop-blur-xl z-50 border-b border-slate-100">
  <nav class="container mx-auto px-4 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group">
        <div class="relative w-12 h-12">
          <div class="absolute inset-0 bg-gradient-to-br from-teal-500 to-teal-600 rounded-xl transform group-hover:scale-110 transition-transform shadow-lg shadow-teal-500/25"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <span class="text-white font-display font-bold text-xl">BI</span>
          </div>
        </div>
        <div>
          <span class="font-display text-2xl font-bold text-slate-900 tracking-tight">ByInterior</span>
          <span class="block text-xs text-slate-500 font-medium tracking-wide">Projektowanie wnętrz Bydgoszcz</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex items-center space-x-8">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class={`text-sm font-medium transition-all hover:text-teal-600 relative py-2 ${
                currentPath === item.href ? 'text-teal-600' : 'text-slate-700'
              }`}
            >
              {item.label}
              {currentPath === item.href && (
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-teal-500 to-teal-400 rounded-full"></span>
              )}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex items-center gap-3">
        <a 
          href="/realizacje" 
          class="text-teal-600 border-2 border-teal-500 px-5 py-2.5 rounded-full font-medium hover:bg-teal-500 hover:text-white transition-all"
        >
          Portfolio
        </a>
        <a 
          href="#kontakt" 
          class="bg-gradient-to-r from-teal-500 to-teal-600 text-white px-6 py-2.5 rounded-full font-medium hover:shadow-lg hover:shadow-teal-500/30 transition-all transform hover:scale-105"
        >
          Bezpłatna wycena
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="lg:hidden w-10 h-10 flex flex-col justify-center items-center space-y-1.5"
        aria-label="Menu"
      >
        <span class="block w-6 h-0.5 bg-slate-900 transition-all origin-center"></span>
        <span class="block w-6 h-0.5 bg-slate-900 transition-all"></span>
        <span class="block w-6 h-0.5 bg-slate-900 transition-all origin-center"></span>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="lg:hidden fixed inset-0 bg-white transform translate-x-full transition-transform duration-300 z-40">
      <div class="flex flex-col h-full pt-24 px-8">
        <ul class="space-y-6">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href} 
                class={`text-xl font-medium block py-2 transition-colors ${
                  currentPath === item.href ? 'text-teal-600' : 'text-slate-700'
                }`}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-10 space-y-4">
          <a 
            href="/realizacje" 
            class="block text-center border-2 border-teal-500 text-teal-600 px-6 py-3 rounded-full font-medium hover:bg-teal-500 hover:text-white transition-all"
          >
            Portfolio
          </a>
          <a 
            href="#kontakt" 
            class="block text-center bg-gradient-to-r from-teal-500 to-teal-600 text-white px-6 py-3 rounded-full font-medium"
          >
            Bezpłatna wycena
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<div class="h-20"></div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  let isOpen = false;

  mobileMenuBtn?.addEventListener('click', () => {
    isOpen = !isOpen;
    const spans = mobileMenuBtn.querySelectorAll('span');
    
    if (isOpen) {
      mobileMenu?.classList.replace('translate-x-full', 'translate-x-0');
      document.body.style.overflow = 'hidden';
      spans[0].style.transform = 'rotate(45deg) translateY(6px)';
      spans[1].style.opacity = '0';
      spans[2].style.transform = 'rotate(-45deg) translateY(-6px)';
    } else {
      mobileMenu?.classList.replace('translate-x-0', 'translate-x-full');
      document.body.style.overflow = '';
      spans[0].style.transform = '';
      spans[1].style.opacity = '1';
      spans[2].style.transform = '';
    }
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      isOpen = false;
      mobileMenu.classList.replace('translate-x-0', 'translate-x-full');
      document.body.style.overflow = '';
      const spans = mobileMenuBtn?.querySelectorAll('span');
      if (spans) {
        spans[0].style.transform = '';
        spans[1].style.opacity = '1';
        spans[2].style.transform = '';
      }
    });
  });
</script>
