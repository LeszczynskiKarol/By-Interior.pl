---
// src/components/Contact.astro - by-interior.pl

const contactInfo = {
  phone: "+48 576 060 832",
  email: "kontakt@by-interior.pl",
  address: {
    street: "ul. Gdaska 31",
    city: "85-005 Bydgoszcz"
  },
  hours: {
    weekdays: "Pon-Pt: 9:00 - 16:30",    
  }
};
---

<section id="kontakt" class="py-24 bg-white">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-observe">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-50 rounded-full text-teal-600 text-sm font-medium mb-4">
        Kontakt
      </div>
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
        Porozmawiajmy o <span class="text-teal-600">Twoim projekcie</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Wypenij formularz lub zadzwo. Odpowiemy na wszystkie pytania i przygotujemy wstpn wycen.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 max-w-6xl mx-auto">
      <!-- Contact Info -->
      <div class="fade-in-observe order-2 lg:order-1">
        <div class="bg-slate-50 rounded-3xl p-10">
          <h3 class="font-display text-2xl font-bold text-slate-900 mb-8">
            Dane kontaktowe
          </h3>
          
          <div class="space-y-8">
            <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="flex items-start gap-5 group">
              <div class="w-14 h-14 bg-teal-100 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-teal-500 transition-colors">
                <svg class="w-6 h-6 text-teal-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-slate-500 mb-1">Telefon</div>
                <div class="text-xl font-semibold text-slate-900 group-hover:text-teal-600 transition-colors">
                  {contactInfo.phone}
                </div>
              </div>
            </a>

            <a href={`mailto:${contactInfo.email}`} class="flex items-start gap-5 group">
              <div class="w-14 h-14 bg-teal-100 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-teal-500 transition-colors">
                <svg class="w-6 h-6 text-teal-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-slate-500 mb-1">Email</div>
                <div class="text-xl font-semibold text-slate-900 group-hover:text-teal-600 transition-colors">
                  {contactInfo.email}
                </div>
              </div>
            </a>

            <div class="flex items-start gap-5">
              <div class="w-14 h-14 bg-teal-100 rounded-2xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-slate-500 mb-1">Adres</div>
                <div class="text-xl font-semibold text-slate-900">
                  {contactInfo.address.street}<br/>
                  {contactInfo.address.city}
                </div>
              </div>
            </div>

            <div class="flex items-start gap-5">
              <div class="w-14 h-14 bg-teal-100 rounded-2xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-sm text-slate-500 mb-1">Godziny otwarcia</div>
                <div class="text-lg font-medium text-slate-900">
                  {contactInfo.hours.weekdays}<br/>                  
                </div>
              </div>
            </div>
          </div>

          <!-- Info box -->
          <div class="mt-10 bg-teal-50 rounded-xl p-6 border-l-4 border-teal-500">
            <h4 class="font-bold text-slate-900 mb-2">Zam贸wienia przez formularz</h4>
            <p class="text-slate-600 text-sm">
              Przyjmujemy zapytania 7 dni w tygodniu przez formularz kontaktowy lub e-mail. 
              Nie musisz czeka na otwarcie biura!
            </p>
          </div>


        </div>
      </div>

      <!-- Form -->
      <div class="fade-in-observe order-1 lg:order-2">
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-slate-100">
          <h3 class="font-display text-2xl font-bold text-slate-900 mb-6">Formularz kontaktowy</h3>
          
          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="user_name" class="block text-sm font-medium text-slate-700 mb-2">
                  Imi i nazwisko *
                </label>
                <input 
                  type="text" 
                  id="user_name" 
                  name="user_name" 
                  required
                  class="w-full px-4 py-3.5 border border-slate-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all bg-slate-50 focus:bg-white"
                  placeholder="Jan Kowalski"
                />
              </div>
              <div>
                <label for="user_email" class="block text-sm font-medium text-slate-700 mb-2">
                  Email *
                </label>
                <input 
                  type="email" 
                  id="user_email" 
                  name="user_email" 
                  required
                  class="w-full px-4 py-3.5 border border-slate-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all bg-slate-50 focus:bg-white"
                  placeholder="jan@example.com"
                />
              </div>
            </div>

            <div>
              <label for="user_phone" class="block text-sm font-medium text-slate-700 mb-2">
                Telefon (opcjonalnie)
              </label>
              <input 
                type="tel" 
                id="user_phone" 
                name="user_phone"
                class="w-full px-4 py-3.5 border border-slate-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all bg-slate-50 focus:bg-white"
                placeholder="576 060 832"
              />
            </div>

            

            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 mb-2">
                Wiadomo *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required
                class="w-full px-4 py-3.5 border border-slate-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all resize-none bg-slate-50 focus:bg-white"
                placeholder="Opisz swoj wizj lub zadaj pytanie..."
              ></textarea>
            </div>

            <!-- File Upload -->
            <div>
              <label class="block text-sm font-medium text-slate-700 mb-2">
                Zaczniki <span class="text-slate-500 font-normal">(max. 5 plik贸w, 10MB ka偶dy)</span>
              </label>
              <div id="file-upload-area" class="border-2 border-dashed border-slate-300 rounded-xl p-6 text-center hover:border-teal-500 transition-colors cursor-pointer bg-slate-50">
                <svg class="w-12 h-12 mx-auto text-slate-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                <p class="text-slate-600 mb-1">Przecignij pliki lub kliknij aby wybra</p>
                <p class="text-sm text-slate-500">JPG, PNG, PDF, DOC (max. 10MB)</p>
                <button type="button" id="upload-btn" class="mt-3 px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors">
                  Wybierz pliki
                </button>
              </div>
              <div id="uploaded-files" class="mt-3 space-y-2"></div>
              <input type="hidden" id="attachment_urls" name="attachment_urls" />
            </div>

            <div class="flex items-start">
              <input 
                type="checkbox" 
                id="privacy" 
                name="privacy" 
                required
                class="mt-1 w-5 h-5 text-teal-600 border-slate-300 rounded focus:ring-teal-500"
              />
              <label for="privacy" class="ml-3 text-sm text-slate-600">
                Wyra偶am zgod na przetwarzanie moich danych osobowych zgodnie z 
                <a href="/polityka-prywatnosci" class="text-teal-600 hover:underline">polityk prywatnoci</a> *
              </label>
            </div>

            <button 
              type="submit"
              class="w-full bg-gradient-to-r from-teal-500 to-teal-600 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:shadow-xl hover:shadow-teal-500/25 transition-all transform hover:scale-[1.02]"
              id="submit-btn"
            >
              <span id="btn-text">Wylij wiadomo</span>
              <span id="btn-loading" class="hidden items-center justify-center gap-2">
                <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Wysyanie...
              </span>
            </button>

            <div id="form-status" class="hidden"></div>

            <p class="text-xs text-slate-500 text-center">
              * Pola wymagane
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- EmailJS Script -->
<script is:inline type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
<!-- Cloudinary Upload Widget -->
<script is:inline src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>

<script is:inline>
  // ========================================
  // KONFIGURACJA BY-INTERIOR.PL
  // ========================================
  
  // EmailJS
  const EMAILJS_PUBLIC_KEY = "gjau8dneW58l9l3tz";
  const EMAILJS_SERVICE_ID = "service_l3de6rh";
  const EMAILJS_TEMPLATE_ID = "template_l4rhlrz";
  
  // Cloudinary
  const CLOUDINARY_CLOUD_NAME = "drpll3ho2";
  const CLOUDINARY_UPLOAD_PRESET = "by-interior";

  // ========================================
  // INICJALIZACJA
  // ========================================
  
  emailjs.init(EMAILJS_PUBLIC_KEY);
  let uploadedFiles = [];

  // ========================================
  // CLOUDINARY UPLOAD WIDGET
  // ========================================
  
  const myWidget = cloudinary.createUploadWidget(
    {
      cloudName: CLOUDINARY_CLOUD_NAME,
      uploadPreset: CLOUDINARY_UPLOAD_PRESET,
      sources: ['local', 'url', 'camera'],
      multiple: true,
      maxFiles: 5,
      maxFileSize: 10485760,
      resourceType: 'auto',
      clientAllowedFormats: ['jpg', 'jpeg', 'png', 'pdf', 'doc', 'docx'],
      showPoweredBy: false,
      language: 'pl',
      text: {
        pl: {
          or: 'Lub',
          back: 'Wstecz',
          close: 'Zamknij',
          upload_files: 'Wybierz pliki',
          drag_files: 'Przecignij pliki',
          browse: 'Przegldaj',
          uploading: 'Przesyanie...',
          max_files_title: 'Przekroczono limit',
          max_files_text: 'Maksymalnie 5 plik贸w'
        }
      },
      styles: {
        palette: {
          window: "#ffffff",
          windowBorder: "#14b8a6",
          tabIcon: "#14b8a6",
          menuIcons: "#0d9488",
          textDark: "#000000",
          textLight: "#FFFFFF",
          link: "#14b8a6",
          action: "#14b8a6",
          inactiveTabIcon: "#999999",
          error: "#ef4444",
          inProgress: "#14b8a6",
          complete: "#10b981",
          sourceBg: "#f9fafb"
        }
      }
    },
    (error, result) => {
      if (!error && result && result.event === "success") {
        const fileInfo = {
          url: result.info.secure_url,
          name: result.info.original_filename,
          size: result.info.bytes,
          format: result.info.format
        };
        uploadedFiles.push(fileInfo);
        document.getElementById('attachment_urls').value = uploadedFiles.map(f => f.url).join(',');
        displayUploadedFile(fileInfo);
      }
    }
  );

  // ========================================
  // FUNKCJE POMOCNICZE
  // ========================================
  
  function displayUploadedFile(fileInfo) {
    const container = document.getElementById('uploaded-files');
    const fileElement = document.createElement('div');
    fileElement.className = 'flex items-center justify-between p-3 bg-slate-50 rounded-lg border border-slate-200';
    fileElement.innerHTML = `
      <div class="flex items-center gap-2">
        <span class="text-2xl"></span>
        <div>
          <p class="text-sm font-medium text-slate-900">${fileInfo.name}.${fileInfo.format}</p>
          <p class="text-xs text-slate-500">${formatFileSize(fileInfo.size)}</p>
        </div>
      </div>
      <button type="button" class="text-red-600 hover:text-red-700" data-url="${fileInfo.url}">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    `;
    container.appendChild(fileElement);
    
    fileElement.querySelector('button').addEventListener('click', function() {
      removeFile(this.dataset.url, fileElement);
    });
  }

  function removeFile(url, element) {
    uploadedFiles = uploadedFiles.filter(f => f.url !== url);
    document.getElementById('attachment_urls').value = uploadedFiles.map(f => f.url).join(',');
    element.remove();
  }

  function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }

  // ========================================
  // EVENT LISTENERS
  // ========================================
  
  document.addEventListener('DOMContentLoaded', function() {
    // Phone click tracking
    const phoneLinks = document.querySelectorAll('a[href^="tel:"]');
    phoneLinks.forEach(link => {
      link.addEventListener('click', function() {
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
          'event': 'phone_click',
          'phone_number': this.href.replace('tel:', ''),
          'click_location': window.location.pathname,
          'engagement_type': 'call_intent'
        });
      });
    });

    // Upload button
    document.getElementById('upload-btn').addEventListener('click', function(e) {
      e.preventDefault();
      myWidget.open();
    });

    // Drag and drop
    const uploadArea = document.getElementById('file-upload-area');
    
    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('border-teal-500', 'bg-teal-50');
    });
    
    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('border-teal-500', 'bg-teal-50');
    });
    
    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('border-teal-500', 'bg-teal-50');
      myWidget.open();
    });

    // Form submission
    const form = document.getElementById('contact-form');
    const submitBtn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');
    const btnLoading = document.getElementById('btn-loading');
    const formStatus = document.getElementById('form-status');

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      
      // Loading state
      btnText.classList.add('hidden');
      btnLoading.classList.remove('hidden');
      btnLoading.classList.add('flex');
      submitBtn.disabled = true;
      formStatus.classList.add('hidden');
      
      // Prepare data
      const formData = new FormData(this);
      const templateParams = {
        user_name: formData.get('user_name'),
        user_email: formData.get('user_email'),
        user_phone: formData.get('user_phone') || 'Nie podano',
        project_type: formData.get('project_type') || 'Nie wybrano',
        message: formData.get('message'),
        attachments: uploadedFiles.length > 0 
          ? uploadedFiles.map(f => `
            <div style="margin-bottom: 12px; padding: 12px; background: white; border-radius: 8px; border: 1px solid #e5e7eb;">
              <a href="${f.url}" 
                style="color: #14b8a6; text-decoration: none; font-weight: 600; display: flex; align-items: center; gap: 8px;"
                target="_blank">
                <span style="font-size: 18px;"></span>
                <span>${f.name}.${f.format}</span>
                <span style="color: #9ca3af; font-weight: normal; font-size: 13px;">(${formatFileSize(f.size)})</span>
              </a>
            </div>
          `).join('')
          : '<p style="color: #9ca3af; font-style: italic; margin: 0;">Brak zacznik贸w</p>'
      };
      
      // Send via EmailJS
      emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, templateParams)
        .then(function() {
          // GTM Event
          window.dataLayer = window.dataLayer || [];
          window.dataLayer.push({
            'event': 'form_submit_success',
            'form_type': 'contact',
            'form_location': 'contact_section',
            'form_details': {
              'has_phone': templateParams.user_phone !== 'Nie podano',
              'has_attachments': uploadedFiles.length > 0,
              'attachment_count': uploadedFiles.length,
              'project_type': templateParams.project_type
            }
          });

          // Success message
          formStatus.innerHTML = `
            <div class="p-4 bg-teal-50 border border-teal-200 rounded-xl flex items-start gap-3">
              <svg class="w-6 h-6 text-teal-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-teal-800">Wiadomo wysana!</p>
                <p class="text-sm text-teal-700">Dzikujemy za kontakt. Odpowiemy najszybciej jak to mo偶liwe.</p>
              </div>
            </div>
          `;
          formStatus.classList.remove('hidden');
          
          // Reset
          form.reset();
          uploadedFiles = [];
          document.getElementById('uploaded-files').innerHTML = '';
          document.getElementById('attachment_urls').value = '';
          
          btnText.classList.remove('hidden');
          btnLoading.classList.add('hidden');
          submitBtn.disabled = false;
          
          setTimeout(() => formStatus.classList.add('hidden'), 5000);
        })
        .catch(function(error) {
          // Error message
          formStatus.innerHTML = `
            <div class="p-4 bg-red-50 border border-red-200 rounded-xl flex items-start gap-3">
              <svg class="w-6 h-6 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-red-900">Wystpi bd</p>
                <p class="text-sm text-red-700">Spr贸buj ponownie lub napisz na: kontakt@by-interior.pl</p>
              </div>
            </div>
          `;
          formStatus.classList.remove('hidden');
          
          btnText.classList.remove('hidden');
          btnLoading.classList.add('hidden');
          submitBtn.disabled = false;
          
          console.error('EmailJS error:', error);
        });
    });
  });
</script>