---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
  ogImage?: string;
  canonical?: string;
}

const { title, description, keywords, ogImage = "/og-default.jpg", canonical } = Astro.props;
const siteUrl = "https://by-interior.pl";
const canonicalUrl = canonical ? `${siteUrl}${canonical}` : Astro.url.href;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="robots" content="index, follow" />

<title>{title} | By Interior Bydgoszcz</title>
<meta name="description" content={description} />
{keywords && <meta name="keywords" content={keywords} />}
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={`${siteUrl}${ogImage}`} />
<meta property="og:locale" content="pl_PL" />
<meta property="og:site_name" content="By Interior - Projektowanie Wnętrz Bydgoszcz" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={`${siteUrl}${ogImage}`} />

<!-- Schema.org -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "By Interior - Projektowanie Wnętrz Bydgoszcz",
  "image": `${siteUrl}/og-default.jpg`,
  "description": description,
  "@id": siteUrl,
  "url": siteUrl,
  "telephone": "+48500123456",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "ul. Gdańska 45/3",
    "addressLocality": "Bydgoszcz",
    "postalCode": "85-005",
    "addressCountry": "PL"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 53.1235,
    "longitude": 18.0084
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "09:00",
      "closes": "17:00"
    }
  ],
  "sameAs": [
    "https://www.facebook.com/byinterior",
    "https://www.instagram.com/byinterior"
  ],
  "priceRange": "$$"
})} />
