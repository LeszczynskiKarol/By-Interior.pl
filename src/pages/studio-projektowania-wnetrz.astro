---
// src/pages/studio-projektowania-wnetrz.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Team from '../components/Team.astro';
import Testimonials from '../components/Testimonials.astro';
import CTA from '../components/CTA.astro';
import Contact from '../components/Contact.astro';

const seoData = {
  title: 'Studio Projektowania Wnętrz Bydgoszcz - By Interior',
  description: 'Profesjonalne studio projektowania wnętrz w Bydgoszczy. Kompleksowe usługi projektowe dla mieszkań, domów i przestrzeni komercyjnych. Bezpłatna konsultacja.',
  keywords: 'studio projektowania wnętrz Bydgoszcz, studio projektowe Bydgoszcz, biuro projektowe wnętrz, By Interior',
  canonical: 'https://by-interior.pl/studio-projektowania-wnetrz'
};

const services = [
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
    </svg>`,
    title: 'Projekty mieszkań',
    description: 'Kompleksowe aranżacje mieszkań każdej wielkości - od kawalerek po przestronne apartamenty.',
    features: ['Rzuty funkcjonalne', 'Wizualizacje 3D', 'Projekty mebli']
  },
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
    </svg>`,
    title: 'Projekty domów',
    description: 'Spójne koncepcje dla całych domów jednorodzinnych i rezydencji.',
    features: ['Integracja z architekturą', 'Projekty oświetlenia', 'Stylizacja']
  },
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>`,
    title: 'Przestrzenie biurowe',
    description: 'Funkcjonalne i inspirujące biura wspierające produktywność zespołów.',
    features: ['Open space', 'Strefy relaksu', 'Sale konferencyjne']
  },
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
    </svg>`,
    title: 'Lokale usługowe',
    description: 'Projekty dla restauracji, kawiarni, sklepów i gabinetów.',
    features: ['Branding wnętrza', 'Optymalizacja przepływu', 'Identyfikacja wizualna']
  }
];

const values = [
  {
    number: '01',
    title: 'Indywidualność',
    description: 'Każdy projekt to unikalna odpowiedź na potrzeby konkretnego klienta. Nie powielamy schematów.'
  },
  {
    number: '02',
    title: 'Funkcjonalność',
    description: 'Piękno idzie w parze z użytecznością. Projektujemy przestrzenie, które rzeczywiście działają.'
  },
  {
    number: '03',
    title: 'Jakość',
    description: 'Dbamy o najwyższy standard - od koncepcji po realizację. Szczegóły tworzą całość.'
  },
  {
    number: '04',
    title: 'Współpraca',
    description: 'Transparentna komunikacja na każdym etapie. Projekt tworzymy wspólnie z klientem.'
  }
];

const awards = [
  { year: '2024', title: 'Najlepsze studio projektowe', org: 'Kujawsko-Pomorskie Design Awards' },
  { year: '2023', title: 'Projekt roku - mieszkanie', org: 'Polish Interior Design' },
  { year: '2023', title: 'Wyróżnienie za innowacyjność', org: 'Architecture & Design Forum' }
];
---

<BaseLayout {...seoData}>
  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center overflow-hidden bg-slate-950">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-950 to-teal-950"></div>
      <div class="absolute top-1/4 left-1/3 w-[600px] h-[600px] bg-teal-500/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] bg-teal-400/5 rounded-full blur-3xl"></div>
    </div>

    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='1' fill-rule='evenodd'/%3E%3C/svg%3E&quot;);"></div>

    <div class="container mx-auto px-4 lg:px-8 relative z-10">
      <div class="max-w-4xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-500/10 border border-teal-500/20 rounded-full text-teal-400 text-sm font-medium mb-8">
          <span class="w-2 h-2 bg-teal-400 rounded-full animate-pulse"></span>
          Studio projektowe od 2016 roku
        </div>
        
        <h1 class="font-display text-5xl lg:text-7xl font-bold text-white mb-8 leading-[1.1]">
          Studio projektowania<br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-teal-300">wnętrz</span> Bydgoszcz
        </h1>
        
        <p class="text-xl text-slate-300 mb-10 leading-relaxed max-w-2xl">
          Jesteśmy zespołem projektantów, którzy wierzą, że dobrze zaprojektowane wnętrze 
          zmienia jakość życia. Tworzymy przestrzenie z charakterem - funkcjonalne, estetyczne 
          i dopasowane do Ciebie.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#kontakt" class="group bg-gradient-to-r from-teal-500 to-teal-400 text-slate-900 px-8 py-4 rounded-full font-semibold text-lg hover:shadow-xl hover:shadow-teal-500/25 transition-all text-center">
            Umów konsultację
            <svg class="inline-block w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/realizacje" class="border-2 border-slate-600 text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-slate-900 hover:border-white transition-all text-center">
            Zobacz portfolio
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-50 rounded-full text-teal-600 text-sm font-medium mb-6">
          Nasze usługi
        </div>
        <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          Pełen zakres <span class="text-teal-600">usług projektowych</span>
        </h2>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
          Od małych mieszkań po duże przestrzenie komercyjne - każdy projekt traktujemy z taką samą starannością
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service, index) => (
          <div 
            class="group bg-slate-50 p-8 rounded-2xl hover:bg-white hover:shadow-xl transition-all fade-in-observe"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="flex gap-6">
              <div class="text-teal-600 flex-shrink-0 group-hover:scale-110 transition-transform" set:html={service.icon} />
              <div>
                <h3 class="font-display text-2xl font-bold text-slate-900 mb-3">{service.title}</h3>
                <p class="text-slate-600 mb-4 leading-relaxed">{service.description}</p>
                <div class="flex flex-wrap gap-2">
                  {service.features.map(feature => (
                    <span class="px-3 py-1 bg-teal-100 text-teal-700 text-sm rounded-full">
                      {feature}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Studio Section -->
  <section class="py-24 bg-slate-50">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="fade-in-observe">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-50 rounded-full text-teal-600 text-sm font-medium mb-6">
            O naszym studio
          </div>
          <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            Projektujemy z <span class="text-teal-600">pasją</span> i precyzją
          </h2>
          <p class="text-slate-600 mb-6 leading-relaxed text-lg">
            By Interior to bydgoskie studio projektowania wnętrz założone w 2016 roku. 
            Przez ponad 8 lat działalności zrealizowaliśmy ponad 120 projektów, zdobywając 
            zaufanie klientów i uznanie w branży.
          </p>
          <p class="text-slate-600 mb-8 leading-relaxed">
            Naszą siłą jest połączenie kreatywności z pragmatyzmem. Projektujemy wnętrza, 
            które nie tylko zachwycają wizualnie, ale przede wszystkim doskonale funkcjonują. 
            Każdy projekt to efekt współpracy z klientem i głębokiego zrozumienia jego potrzeb.
          </p>
          
          <div class="grid grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-4xl font-bold text-teal-600">8+</div>
              <div class="text-sm text-slate-500">Lat doświadczenia</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-teal-600">120+</div>
              <div class="text-sm text-slate-500">Projektów</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-teal-600">100%</div>
              <div class="text-sm text-slate-500">Zadowolenia</div>
            </div>
          </div>
        </div>
        
        <div class="fade-in-observe relative">
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-4">
              <img 
                src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=600&q=80" 
                alt="Realizacja studio By Interior"
                class="rounded-2xl shadow-lg"
                loading="lazy"
              />
              <img 
                src="https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=600&q=80" 
                alt="Projekt wnętrza Bydgoszcz"
                class="rounded-2xl shadow-lg"
                loading="lazy"
              />
            </div>
            <div class="pt-8">
              <img 
                src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?w=600&q=80" 
                alt="Wnętrze zaprojektowane przez By Interior"
                class="rounded-2xl shadow-lg h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-50 rounded-full text-teal-600 text-sm font-medium mb-6">
          Nasze wartości
        </div>
        <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          Czym się <span class="text-teal-600">kierujemy</span>
        </h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value, index) => (
          <div 
            class="text-center fade-in-observe"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="w-16 h-16 bg-gradient-to-br from-teal-500 to-teal-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-white font-bold text-xl">{value.number}</span>
            </div>
            <h3 class="font-display text-xl font-bold text-slate-900 mb-3">{value.title}</h3>
            <p class="text-slate-600 leading-relaxed">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Awards Section -->
  <section class="py-24 bg-slate-900 text-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl lg:text-5xl font-bold mb-6">
            Nagrody i <span class="text-teal-400">wyróżnienia</span>
          </h2>
          <p class="text-lg text-slate-400">
            Docenieni przez branżę za jakość i innowacyjność projektów
          </p>
        </div>

        <div class="space-y-6">
          {awards.map(award => (
            <div class="flex items-center gap-6 bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-colors">
              <div class="w-20 h-20 bg-gradient-to-br from-teal-500 to-teal-600 rounded-xl flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold text-xl">{award.year}</span>
              </div>
              <div>
                <h3 class="font-display text-xl font-bold mb-1">{award.title}</h3>
                <p class="text-slate-400">{award.org}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <Team />
  <Testimonials />
  <CTA />
  <Contact />
</BaseLayout>
