---
const testimonials = [
  {
    name: 'Katarzyna M.',
    role: 'Właścicielka apartamentu',
    content: 'ByInterior przekształciło nasze mieszkanie w prawdziwy dom. Projektantka zrozumiała nasze potrzeby od pierwszego spotkania. Efekt przeszedł nasze najśmielsze oczekiwania!',
    rating: 5,
    project: 'Apartament 85m², Bydgoszcz'
  },
  {
    name: 'Tomasz i Agnieszka W.',
    role: 'Właściciele domu',
    content: 'Profesjonalizm na najwyższym poziomie. Projekt był przemyślany w każdym detalu, a realizacja przebiegła sprawnie. Polecamy wszystkim szukającym projektanta wnętrz w Bydgoszczy.',
    rating: 5,
    project: 'Dom jednorodzinny 220m², Fordon'
  },
  {
    name: 'Marek K.',
    role: 'Właściciel firmy',
    content: 'Nowe biuro to zupełnie inna jakość pracy. Zespół docenił ergonomiczne rozwiązania, a klienci zawsze chwalą wystrój. Inwestycja, która się zwróciła.',
    rating: 5,
    project: 'Biuro 150m², Centrum Bydgoszczy'
  }
];
---

<section class="py-24 bg-gradient-to-br from-slate-900 to-slate-950">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-observe">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-500/10 border border-teal-500/20 rounded-full text-teal-400 text-sm font-medium mb-4">
        Opinie klientów
      </div>
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-white mb-4">
        Co mówią <span class="text-teal-400">nasi klienci</span>
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Opinie osób, które zaufały naszemu doświadczeniu i profesjonalizmowi.
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map((testimonial, index) => (
        <div 
          class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-teal-500/30 transition-colors fade-in-observe"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Rating -->
          <div class="flex gap-1 mb-6">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="w-5 h-5 text-teal-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          
          <!-- Quote -->
          <blockquote class="text-slate-300 leading-relaxed mb-6">
            "{testimonial.content}"
          </blockquote>
          
          <!-- Author -->
          <div class="border-t border-white/10 pt-6">
            <div class="font-semibold text-white">{testimonial.name}</div>
            <div class="text-sm text-slate-500">{testimonial.role}</div>
            <div class="text-sm text-teal-400 mt-1">{testimonial.project}</div>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto mt-16 pt-16 border-t border-white/10">
      <div class="text-center">
        <div class="text-4xl font-bold text-white mb-1">120+</div>
        <div class="text-slate-500 text-sm">Zrealizowanych projektów</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-white mb-1">100%</div>
        <div class="text-slate-500 text-sm">Zadowolonych klientów</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-white mb-1">8</div>
        <div class="text-slate-500 text-sm">Lat doświadczenia</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-white mb-1">5.0</div>
        <div class="text-slate-500 text-sm">Średnia ocena</div>
      </div>
    </div>
  </div>
</section>
